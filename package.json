{
  "name": "test-app-cloudrun",
  "version": "1.0.0",
  "description": "Testing deployment on Google cloud run",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "node test.js",
    "test:watch": "nodemon test.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docker:build": "docker build -t test-app-cloudrun .",
    "docker:run": "docker run -p 3001:3001 test-app-cloudrun",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=test-app-cloudrun)",
    "docker:clean": "docker rmi test-app-cloudrun",
    "deploy:dev": "bash ./deploy/dev.sh",
    "deploy:staging": "bash ./deploy/staging.sh", 
    "deploy:production": "bash ./deploy/prod.sh",
    "env:dev": "cp .env.dev .env",
    "env:staging": "cp .env.staging .env",
    "env:prod": "cp .env.prod .env",
    "infra:init": "cd infrastructure && terraform init",
    "infra:plan": "cd infrastructure && terraform plan",
    "infra:apply": "cd infrastructure && terraform apply",
    "infra:destroy": "cd infrastructure && terraform destroy"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.55.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "microservice",
    "gcp",
    "cloud-run",
    "kubernetes"
  ],
  "author": "group:default/developers",
  "license": "ISC"
}
